@using Blazored.LocalStorage
@using Didact.Models
@using Didact.Flatify.Layout
@using Didact.Flatify.Components
@using Didact.Flatify.Components.Container
@using Didact.Flatify.Enums
@using Didact.Components.Data
@using Didact.Components
@inherits LayoutComponentBase

<CascadingValue Value="@_didact" Name="Didact">
	<FlatifyMainContent>
		<AppBar>
			<FlatifyNavBar>
				<NavigationLinks>
					<Navs />
				</NavigationLinks>
				<SearchBar>
					<ProfileDropdown />
				</SearchBar>
			</FlatifyNavBar>
		</AppBar>

		<SideBar>
			<SideNavs />
		</SideBar>

		<MainContent>
			<FlatifyContainer MaxSize="ContainerSize.XXL" Class="height-100p">
				@Body
			</FlatifyContainer>
		</MainContent>

	</FlatifyMainContent>
</CascadingValue>